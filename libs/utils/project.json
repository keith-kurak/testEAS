{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/utils/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": true,
        "maxWarnings": 0
      }
    },
    "ci-lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "format": "json",
        "outputFile": "libs/utils/report.json",
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/utils/jest.config.ts"
      },
      "configurations": {
        "ci": {
          "maxWorkers": 2,
          "workerIdleMemoryLimit": "500Mb"
        }
      }
    },
    "tsc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node_modules/.bin/tsc --project libs/utils/tsconfig.spec.json --pretty --extendedDiagnostics"
      }
    }
  }
}
